<% layout("/layouts/boilerplate.ejs") -%>

<body>
    <div class="signup-container row offset-md-4 offset-xs-3">
      <div class="col-md-6 col-xs-8">
        <h1>Signup</h1><br><br>
        <form class="needs-validation"  method="post" action="/signup" novalidate>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              class="form-control"
              type="email"
              name="email"
              id="email"
              required
            />
            <div class="valid-feedback">Email looks good!</div>
            <div class="invalid-feedback">Enter an email</div>
          </div>
          <div class="mb-3 mt-4">
            <label for="username" class="form-label">Username</label>
            <input
              class="form-control"
              type="text"
              name="username"
              id="username"
              required
            />
            <div class="valid-feedback">Username looks good!</div>
            <div class="invalid-feedback">Enter a username</div>
          </div>
          <div class="mb-3 mt-4">
            <label for="password" class="form-label">Password</label>
            <input
              class="form-control"
              type="password"
              name="password"
              id="password"
              required
            />
            <div class="valid-feedback">Password looks good!</div>
            <div class="invalid-feedback">Enter a password</div>
          </div>
          <button type="submit" class="signup-btn btn red-color-bg col-xs-4 col-md-4 col-lg-4   offset-lg-4 offset-md-4 offset-xs-1 mt-4">
            Signup
          </button>
        </form>
      </div>
    </div>
  </body>